                            <label>Expiry Date</label>
                            <input type="date" class="form-control" id="txtPExpiryDate" placeholder="Expiry Date">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPUOM" placeholder="UOM">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPHSN" placeholder="HSN">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPGST" placeholder="GST">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPMRP" placeholder="MRP">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPPurchesRate" placeholder="Purchase Rate">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPSellingRate" placeholder="Selling Rate">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPQty" placeholder="Net Quantity">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPAmount" placeholder="Amount">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtPDiscount" placeholder="Discount">
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="txtPCGST" placeholder="CGST">
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="txtPSGST" placeholder="SGST">
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="txtPCess" placeholder="Cess">
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="txtPtotal" placeholder="Total">
