                                    <input type="text" class="form-control" id="lblTotalPurchesQuantity" placeholder="Qty">
                                    <label for="floatingEmail">Qty</label>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="lblProductTaxableAmount" placeholder="TAXABLE AMOUNT">
                                    <label for="floatingEmail">TAXABLE Amt</label>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="lblTotalProductDiscount" placeholder="Name">
                                    <label for="floatingEmail">DISCOUNT</label>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="lblTotalTotalPurchesCGST" placeholder="Name">
                                    <label for="floatingEmail">	CGST Amt</label>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="lblTotalPurchesSGST" placeholder="Name">
                                    <label for="floatingEmail">	SGST Amt</label>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="lblTotalPurchrsCESS" placeholder="Name">
                                    <label for="floatingEmail">	CESS Amt</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="txtPurchesOtherCharcge" placeholder="Name">
                                    <label for="floatingEmail">	OTHER CHARGES</label>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="lblPurchesTotalAmount" placeholder="Name">
                                    <input type="hidden" id="hdnPurchesTotalAmount">
                                    <label for="floatingEmail">	TOTAL AMOUNT</label>
                                </div>
                            </div>
                            <div class="col-sm-4  text-end">
                                <div class="form-floating" style="padding-right: 30px; padding-top: 16px;">
                                    <input type="hidden" id="hdnamoutvalue" value="0" />
                                    <button type="submit" class="btn btn-primary" onclick="SavePurchesDetails()">Submit</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <!-- Right side columns -->
        <div class="col-lg-4">
            <div class="card" style="height:42rem;">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
