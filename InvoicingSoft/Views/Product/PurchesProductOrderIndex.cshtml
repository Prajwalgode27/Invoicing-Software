<script>
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#allpurchesorderlist').DataTable({
            dom: 'Bfrtip',
            buttons: [{
                extend: 'pdf',
                title: 'Purches Order Report_',
                filename: 'Purches Order Details_' + getCurrentDate(),
            }, {
                extend: 'excel',
                title: 'Purches Order Report_',
                filename: 'Purches Order Details_' + getCurrentDate(),
            }, {
                extend: 'csv',
                filename: 'Purches Order Details_' + getCurrentDate(),
            }],
            "searching": true,
         //   "scrollY": 355,
            "scrollX": 355,
            "paging": true,
            "ordering": true,
            "info": true,
            "responsive": true,
            "fixedHeader": true,
        });
    });

    function getCurrentDate() {
        var date = new Date();
        var year = date.getFullYear();
        var month = (date.getMonth() + 1).toString().padStart(2, '0');
        var day = date.getDate().toString().padStart(2, '0');
        return year + '-' + month + '-' + day;
    }
</script>
